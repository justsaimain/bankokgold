<%- include('./partials/head.ejs') %> 
  <body>
    <div class="header">
      <p>BKK <span>2D</span> <span>3D</span></p>
    </div>
    <div class="content">
    <h1 class="panel-title">Admin Panel</h1>
<% if (data && data.length > 0) { %>
    <p>Upcoming result</p>
       <table >
        <thead>
          <tr>
          <th>Buy</th>
          <th>Sell</th>
          <th>3D</th>
          <th>2D</th>
        </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= data[0] ? "1." + data[0].buy : "-" %> </td>
           <td><%= data[0] ? "2." + data[0].sell : "-" %> </td>
           <td><%= data[0] ? data[0].buy : "-" %> </td>
           <td><%= data[0] ? data[0].buy.slice(-1) + data[0].sell.slice(-1): "-" %> </td>
          </tr>
        </tbody>
       </table>
         <% if(data.length > 0){ %> 
          <form action="/panel/delete" method="post">
            <button type="submit" class="delete-btn" id="deleteBtn">Delete</button>
          </form>
      <% } %> 
<% } else { %>    

       <form class="panel-form" action="/panel" id="form" method="post">
           <input type="text" name="buy" placeholder="Buy">
           <input type="text" name="sell" placeholder="Sell">
           <button type="submit">
              Create
           </button>
       </form>
      
      <% } %> 

      <hr>

     <p>Marquee Text</p>

       
       <% if(marquee.length > 0){ %> 
        <p class=""><%= "- " + marquee[0].marquee_text %> </p>
          <form action="/panel/marquee/delete" method="post">
            <button type="submit" class="marquee-btn" >Delete Marquee</button>
          </form>
      <% }else { %>
        <form class="marquee-form" action="/panel/marquee" method="post" style="margin-top:50px">
           <input type="text" name="marquee_text" placeholder="Alert Text" style="display: block">
            <button type="submit" class="marquee-btn" id="">Update Marquee</button>
        </form>
      <% } %>  

    <hr>
    
      <button onclick="location.href='/panel/import';" class="marquee-btn" >Import from XLSX File</button>
      <button onclick="location.href='/panel/temp';" class="marquee-btn" >Insert Data</button>
    
    </div>

  </body>


</html>
